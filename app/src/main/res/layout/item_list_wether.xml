<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtEstacion"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_light_default"/>
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"     >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/condicion"
            android:id="@+id/txtCondicionWeather"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/txtValorCondicion"
            android:layout_weight="1"
            android:textColor="@color/common_google_signin_btn_text_light_default"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/temp"
                android:id="@+id/txtTemp"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/common_google_signin_btn_text_light_default"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtValorTemp"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_light_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/humedad"
                android:id="@+id/txtHumedad"
                android:paddingRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/common_google_signin_btn_text_light_default"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtValorHumedad"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_light_default"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>